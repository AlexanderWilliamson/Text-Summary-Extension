{
	"manifest_version": 3,
	"name": "Text Summarizer",
	"description": "Summarizes selected text",
	"version": "0.1.0",
	"action":{
		"default_popup": "popup.html"
	},
	"permissions": ["activeTab", "scripting"],
	"background":{
		"service_worker": "service-worker.js"
	},
	"content_scripts":[
		{
			"matches": ["<all_urls>"],
			"js": ["text-getter.js"]
		}
	]
}